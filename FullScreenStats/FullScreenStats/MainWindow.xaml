<Window x:Class="FullScreenStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullScreenStats"
        mc:Ignorable="d"
        Title="MainWindow" Height="272" Width="569">
    <Grid>
        <Button x:Name="btn_show" Content="Show" HorizontalAlignment="Left" Margin="396,210,0,0" VerticalAlignment="Top" Width="75" Click="showButton_Click"/>
        <GroupBox x:Name="statsGroup" Header="Stat Settings" HorizontalAlignment="Left" Height="160" Margin="10,10,0,0" VerticalAlignment="Top" Width="205">
            <Grid x:Name="grid_settings" Margin="10,0,2,2">
                <CheckBox x:Name="chk_FPS" Content="FPS" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="chk_FPS_Checked"/>
                <CheckBox x:Name="chk_network" Content="Network Traffic" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
                <CheckBox x:Name="chk_systemTime" Content="System Time" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
                <CheckBox x:Name="chk_systemTemps" Content="System Temps" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="displayGroup" Header="Display Settings" HorizontalAlignment="Left" Height="115" Margin="220,10,0,0" VerticalAlignment="Top" Width="260">
            <Grid Margin="10,0,2,2">
                <ComboBox x:Name="combo_monitor" HorizontalAlignment="Left" Margin="84,10,0,0" VerticalAlignment="Top" Width="146" Height="18"/>
                <Label x:Name="lbl_monitor" Content="Monitor:" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Height="27"/>
                <Label x:Name="lbl_color" Content="Background:" HorizontalAlignment="Left" Margin="0,35,0,0" Height="26" VerticalAlignment="Top"/>
                <ComboBox x:Name="combo_color" HorizontalAlignment="Left" Margin="84,40,0,0" VerticalAlignment="Top" Width="146" Height="18" />
            </Grid>
        </GroupBox>
        <Button x:Name="btn_exit" Content="Quit" HorizontalAlignment="Left" Margin="476,210,0,0" VerticalAlignment="Top" Width="75" Click="btn_exit_Click"/>

    </Grid>
</Window>
